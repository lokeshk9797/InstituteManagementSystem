@model InstituteManagement.ViewModel.NewStudentViewModel
@{
    ViewBag.Title = "StudentRegistration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>StudentRegistraion</h2>
@using (Html.BeginForm("Create", "Student"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Student.FirstName)
        @Html.TextBoxFor(m => m.Student.FirstName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Student.LastName)
        @Html.TextBoxFor(m => m.Student.LastName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Student.DateOfBirth)
        <input type="date" name="Student.DateOfBirth" />
    </div>
    @*<div class="form-group">
        @Html.LabelFor(m => m.Student.DateOfAdmission)
        @Html.TextBoxFor(m => m.Student.DateOfBirth, "{0:d MMM yyyy}", new { @class = "form-control" })
        <input type="date" name="Student.DateOfAdmission" />
    </div>*@
    <div class="form-group">
        @Html.LabelFor(m => m.Student.Gender)
        @Html.TextBoxFor(m => m.Student.Gender, new { @class = "form-control" })
    </div>
    @*@Html.HiddenFor(m => m.Student.Class.Id)*@
    <div class="form-group">
        @Html.LabelFor(m => m.Student.Class)
        
        @Html.DropDownListFor(m => m.Student.Class, new SelectList(Model.ClassModels,"Id","ClassName"), "Select Class", new { @class = "form-control" })
        
    </div>
    <button type="submit" class="btn btn-primary">Save </button>
}

